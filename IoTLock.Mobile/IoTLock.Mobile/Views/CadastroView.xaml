<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="IoTLock.Mobile.Views.CadastroView"
            Title="Cadastro"
            BackgroundColor="White">
    <TabbedPage.Children>
        <ContentPage Title="Grupo">
            <StackLayout VerticalOptions="Center">
                <Label
                    Text="Nome do Grupo"
                    TextColor="#9b4b9d"
                    FontSize="Medium"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
                <Entry 
                    Text="{Binding TextoGrupo}"
                    TextColor="#9b4b9d"/>
                <Button
                    Margin="0,15,0,0"
                    Text="Cadastrar"
                    TextColor="White"
                    BackgroundColor="#9b4b9d"
                    Command="{Binding GrupoCommand}"/>
            </StackLayout>
        </ContentPage>
        <ContentPage Title="Pessoa">
            <StackLayout Padding="15" VerticalOptions="Center">
                <Label
                    Text="Nome da Pessoa"
                    TextColor="#9b4b9d"
                    FontSize="Medium"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
                <Entry
                    Text="{Binding TextoPessoa}"
                    TextColor="#9b4b9d"/>
                <Label
                    Text="Grupo"
                    TextColor="#9b4b9d"
                    FontSize="Medium"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
                <Picker
                    TextColor="#9b4b9d"
                    ItemsSource="{Binding Grupos}"
                    SelectedItem="{Binding SelectedGroup}">
                </Picker>
                <Button
                    TextColor="White"
                    BackgroundColor="#9b4b9d"
                    Margin="0,15,0,0"
                    Text="Cadastrar"
                    Command="{Binding CadastrarPessoaCommand}"/>
            </StackLayout>
        </ContentPage>
        <ContentPage Title="Rosto">
            <StackLayout VerticalOptions="Center">
                <Label
                    Text="Pessoa"
                    TextColor="#9b4b9d"
                    FontSize="Medium"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
                <Picker
                    TextColor="#9b4b9d"
                    ItemsSource="{Binding People}"
                    SelectedItem="{Binding SelectedPerson}"/>
                <Image Source="{Binding ImageUrl}"
                       HeightRequest="200"
                       BackgroundColor="Azure"/>
                <ActivityIndicator
                    IsVisible="{Binding IsRunning}"
                    IsRunning="{Binding IsRunning}"/>
                <Button 
                    Text="Cadastrar rosto" 
                    TextColor="White"
                    BackgroundColor="#9b4b9d"
                    Command="{Binding TakePictureCommand}"/>
                <Button 
                    Text="Confirmar"
                    TextColor="White"
                    BackgroundColor="#9b4b9d"
                    Command="{Binding ConfirmedCommand}"/>
            </StackLayout>
        </ContentPage>
    </TabbedPage.Children>
</TabbedPage>