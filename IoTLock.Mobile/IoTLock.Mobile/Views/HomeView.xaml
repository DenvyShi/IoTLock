<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IoTLock.Mobile.Views.HomeView"
             Title="Home"
             BackgroundColor="White">
    <StackLayout>
        <Label
            Margin="10"
            Text="Smart House"
            TextColor="#9b4b9d"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            FontSize="Large"
            FontAttributes="Bold"/>
        <TableView Margin="10">
            <TableRoot>
                <TableSection Title="Luzes">
                    <SwitchCell 
                        Text="Corredor" 
                        OnChanged="Corredor_Changed"/>
                    <SwitchCell 
                        Text="Cozinha"
                        OnChanged="Cozinha_Changed"/>
                    <SwitchCell 
                        Text="Jardim"
                        OnChanged="Jardim_Changed"/>
                    <SwitchCell 
                        Text="Quarto"
                        OnChanged="Quarto_Changed"/>
                </TableSection>
            </TableRoot>
        </TableView>
        <Button 
            Margin="15"
            Text="Configurações"
            TextColor="White"
            BackgroundColor="#9b4b9d"
            Command="{Binding ConfigCommand}"/>
    </StackLayout>
</ContentPage>